<!--Model: Nickname, Email, Password, ConfirmPassword -->
@model Blog.Models.RegisterAccount
<!-- Tab name -->
@{
    ViewData["Title"] = "Register";
}

<!-- Register: form create new account -->
<div class="row my-5">
    <div class="col">
        <form asp-action="RegisterUser" asp-controller="Account" method="post">
            <!-- Nickname -->
            <div class="form-group">
                <label asp-for="Nickname"></label>
                <input asp-for="Nickname" class="form-control" />
            </div>
            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <!-- ConfirmPassword -->
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>